{
  "name": "folderpilot",
  "version": "1.0.2",
  "description": "Folder and file management tool",
  "main": "main.js",
  "author": "Your Name",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "ELECTRON_GET_USE_PROXY=true GLOBAL_AGENT_HTTPS_PROXY=false electron-builder --win --config.compression=store",
    "build-win-simple": "electron-builder --win --config.compression=store --config.nsis.oneClick=false",
    "build-win-portable": "electron-builder --win --config.win.target=portable --config.compression=store",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^25.1.8",
    "png-to-ico": "^3.0.1"
  },
  "build": {
    "appId": "com.intothewild.folderpilot",
    "productName": "FolderPilot",
    "publish": {
      "provider": "github",
      "owner": "IntoTheWild-Dev",
      "repo": "FolderPilot"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "package.json",
      "renderer/**/*"
    ],
    "extraFiles": [
      {
        "from": "renderer/assets",
        "to": "renderer/assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
